#!/usr/bin/env bash

# Namespace
cat <<EOF | kubectl apply -f -
apiVersion: v1
kind: Namespace
metadata:
  name: devops
EOF

# Deployment
cat <<EOF | kubectl apply -f -
apiVersion: apps/v1
kind: Deployment
metadata:
  name: debug
  namespace: devops
spec:
  selector:
    matchLabels:
      app: debug
  replicas: 1
  template:
    metadata:
      labels:
        app: debug
    spec:
      containers:
      - image: realorko/docker-debugging:latest
        imagePullPolicy: Always
        name: debug
        ports:
        - containerPort: 8080
EOF

kubectl wait --for=condition=available --timeout=600s deployment/debug -n infra-debugging
